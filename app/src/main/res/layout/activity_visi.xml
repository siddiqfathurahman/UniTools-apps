<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewPeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SELAMAT KAMU MASUK KE DALAM HALAMAN PETA"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageViewPohon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/peta"
        app:layout_constraintTop_toBottomOf="@id/textViewPeta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:maxHeight="300dp"/>

    <TextView
        android:id="@+id/textViewFungsiPeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fungsi Peta"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageViewPohon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewFungsiPetaContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Menunjukkan lokasi dengan akurat.\n2. Membantu navigasi dan mencari rute tercepat.\n3. Menyediakan informasi lokasi menarik."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewFungsiPeta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/content_background"/>

    <Button
        android:id="@+id/buttonGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO BACK"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewFungsiPetaContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black"
        android:textColor="#FFFFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
